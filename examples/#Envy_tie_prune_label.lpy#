def generate_points_v_trellis():
  x = np.full((7,), 0.45).astype(float)
  #z = np.arange(3, 24, 3).astype(float)
  y = np.full((7,), 0).astype(float)
  z = np.arange(0.6,3.4, 0.45)
  #print(z)
  pts = []
  id = 0
  for i in range(x.shape[0]):
    pts.append((-x[i], y[i], z[i]))
    id+=1
    pts.append((x[i], y[i], z[i]))
    id+=1
  return pts
